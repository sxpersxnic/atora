{
  "name": "atora",
  "version": "0.3.0",
  "license": "MIT",
  "author": "sxperlinx",
  "description": "A React component library.",
  "type": "module",
  "keywords": [
    "react",
    "component",
    "library",
    "ui",
    "atora"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxperlinx/atora.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "vite build && npx @tailwindcss/cli -i ./src/css/tailwind.css -o ./dist/atora.css --minify",
    "clean:build": "rm -rf dist && npm run build",
    "dry-pack": "npm pack --dry-run",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "fmt": "prettier --write .",
    "check": "npm run fmt && npm run lint && npm run typecheck && npm run dry-pack",
    "publish": "npm publish --access public",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "wasm": "./scripts/build-wasm"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/types/index.d.ts",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.es.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    },
    "./dist/*.css": {
      "import": "./dist/*.css",
      "require": "./dist/*.css"
    }
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/cli": "^4.1.3",
    "@tailwindcss/vite": "^4.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-imports": "^1.8.7",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^8.6.12",
    "tailwind-merge": "^3.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
